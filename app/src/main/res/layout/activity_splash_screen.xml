<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_LogoEcolopli"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_ecolopli_logo_t"
        android:layout_marginTop="50dp"/>

    <TextView
    android:id="@+id/tv_Label"
    android:layout_below="@id/iv_LogoEcolopli"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/app_name"
    android:textAppearance="?android:attr/textAppearance"
    android:textColor="@color/colorAccent"
    android:textSize="40dp"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Label2"
        android:layout_below="@id/tv_Label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="par"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/colorAccent"
        android:textColorLink="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_below="@id/tv_Label2"
        android:id="@+id/iv_LogoLaposte"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@mipmap/ic_laposte_t" />

</RelativeLayout>