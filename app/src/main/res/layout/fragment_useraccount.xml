<LinearLayout
    android:id="@+id/fragment_news_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="#EDD9CF">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="Nom :"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_Name"
                android:layout_weight="1"
                android:gravity="center" />
            <Button
                android:id="@+id/bt_EditName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="PrÃ©nom"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_FirstName"
                android:layout_weight="1"
                android:gravity="center" />
            <Button
                android:id="@+id/bt_EditFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="Mot de Passe :"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_Password"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textPassword" />
            <Button
                android:id="@+id/bt_EditPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="Adresse :"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_Address"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="4"
                android:lines="4"/>
            <Button
                android:id="@+id/bt_EditAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="Email"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_EMail"
                android:layout_weight="1"
                android:gravity="center"/>
            <Button
                android:id="@+id/bt_EditEMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button"/>
        </TableRow>
    </TableLayout>
</LinearLayout>