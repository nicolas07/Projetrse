<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_news_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD9CF"
    android:gravity="center">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse de retour" />

            <TextView
                android:id="@+id/tv_ReturnAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>


        <LinearLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de colis" />

            <EditText
                android:id="@+id/et_ReturnPackageNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de retour" />

            <TextView
                android:id="@+id/tv_ReturnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_EditReturnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_send"
                android:scaleType="fitXY"
                android:text="Button" />

        </LinearLayout>


        <LinearLayout
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3">

            <Button
                android:id="@+id/bt_ValidateReturn"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="Valider" />

        </LinearLayout>


    </GridLayout>

</LinearLayout>